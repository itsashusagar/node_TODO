<!DOCTYPE html>
<html>
<head>
  <title>To-Do List</title>
</head>
<body>
  <h1>To-Do List</h1>
  
  <form action="/add" method="post">
    <input type="text" name="task" placeholder="Add a task" required>
    <button type="submit">Add</button>
  </form>
  
  <ul>
    <% tasks.forEach((task, index) => { %>
      <li>
        <%= task %>
        <a href="/delete/<%= index %>">(Delete)</a>
      </li>
    <% }); %>
  </ul>
</body>
</html>
